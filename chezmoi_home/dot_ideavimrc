" Configure handlers
sethandler <C-O> a:vim
sethandler <C-I> a:vim
sethandler <C-[> a:vim
sethandler <C-]> a:vim
sethandler <C-S> a:ide
sethandler <C-F> a:ide
sethandler <C-R> a:ide
sethandler <C-E> a:ide
sethandler <C-B> a:ide
sethandler <C-G> a:ide
sethandler <C-U> a:ide

" Settings
set incsearch
set ideajoin
set number
set relativenumber
set idearefactormode=keep
set scrolloff=5
set clipboard+=unnamedplus
set clipboard+=ideaput
set showmode
set ideamarks

" Plugins
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'machakann/vim-highlightedyank'
Plug 'easymotion/vim-easymotion'

" Leader key
let mapleader=" "

" Don't use Ex mode, use Q for formatting.
map Q gq

" system clipboard
vmap <leader>y "+y
vmap <leader>d "+d
nmap <leader>y "+yy
nmap <leader>p "+p
nmap <leader>P "+P
vmap <leader>p "+p
vmap <leader>P "+P

" Forwards and back
map <C-O> <Action>(Back)
map <C-I> <Action>(Forward)

" Go to
nmap <leader>gd <Action>(GotoDeclaration)
nmap <leader>gs <Action>(GotoSuperMethod)
nmap <leader>gi <Action>(GotoImplementation)
nmap <leader>gb <Action>(JumpToLastChange)
nmap <leader>gu <Action>(FindUsages)
nmap <leader>gn <Action>(GotoNextError)
nmap <leader>gp <Action>(GotoPreviousError)

" Find
nmap <leader>ff <Action>(GotoFile)
nmap <leader>fr <Action>(RecentFiles)
nmap <leader>fs <Action>(FileStructurePopup)
nmap <leader>fws <Action>(GotoSymbol)
nmap <leader>fc <Action>(GotoClass)

" Refactor
nmap <leader>rt <Action>(RenameElement)
nmap <leader>rr <Action>(RenameElement)

" Toggle
nmap <leader>tb <Action>(ToggleLineBreakpoint)

" Misc
nmap <leader>d <Action>(Debug)
nmap <leader><leader> <Action>(SearchEverywhere)
nmap <leader>ir <Action>(IdeaVim.ReloadVimRc.reload)

" EasyMotion
let g:EasyMotion_do_mapping = 0 " Disable default mappings
nmap <leader>s <Plug>(easymotion-s2)
nmap <leader>t <Plug>(easymotion-t2)

" Find more examples here: https://jb.gg/share-ideavimrc
